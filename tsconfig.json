{
	"compilerOptions": {
		"module": "es2020",
		"target": "es2019",
		"declaration": true,
		"outDir": "./lib",
		"jsx": "react",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"downlevelIteration": true,
		"noImplicitAny": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.(spec|test).ts"]
}
